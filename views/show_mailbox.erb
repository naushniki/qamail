<center>
<table border=5 width="100%" class="mailbox_table">

<td width="40%" valign="top">
<table>
<tr>
<th>Subject</th>
<th>From</th>
<th>Date</th>
</tr>
<% @letters.each do |letter| %>
  <tr>
  <td><a target = "letter" href="/show_letter?id=<%= letter.id%>&session_key=<%= @session_key%>&address=<%= @mailbox.address%>"><%= letter.subject %></a></td>
  <td><%= letter.from %></td>
  <td><%= letter.written_at %></td>
  </tr>
<% end %>
</tr>
</table>
</td>
<td valign="top">
<iframe id="current_letter" width="100%" name="letter" frameBorder="0" scrolling=yes src="" onLoad="resizeIframe(this);"></iframe> 
</td>
</table>
</center>
